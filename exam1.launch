package exam;

public class exam1 {
    public static void main(String[] args) {
        int n = 5;
        int mid = (n / 2) + 1;

        // Upper half of diamond
        for (int i = 1; i <= mid; i++) {
            for (int j = 1; j <= mid - i; j++)
                System.out.print("  "); // print spaces
            for (int j = 1; j <= (2 * i - 1); j++)
                System.out.print("* ");
            System.out.println();
        }

        // Lower half of diamond
        for (int i = mid - 1; i >= 1; i--) {
            for (int j = 1; j <= mid - i; j++)
                System.out.print("  "); // print spaces
            for (int j = 1; j <= (2 * i - 1); j++)
                System.out.print("* ");
            System.out.println();
        }
    }
}
